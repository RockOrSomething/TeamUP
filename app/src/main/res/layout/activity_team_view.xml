<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settingsPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is a sample teamview page.  The name (larger and prettier) goes here." />

    </LinearLayout>

    <!--There has to be a prettier way to do this, than hard-coding it via virtual pixels...-->
    <Space
        android:layout_width="match_parent"
        android:layout_height="575dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">



        <Button
            android:id="@+id/backToMainFromSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="launchMain"
            android:text="Back to main menu" />
    </LinearLayout>

</LinearLayout>